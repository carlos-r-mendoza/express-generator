pre Sorting predicate = {{predicate}}; reverse = {{reverse}}
input(type="text", placeholder="search", ng-model="search")
div
	table.table.table-striped
		tr
			th.text-center(ng-repeat="header in headers track by $index") {{header}} 
				a(href="#", ng-show="toggleCheveron", ng-click="sortData($index); toggleCheveron = !toggleCheveron") 
					span.glyphicon.glyphicon-chevron-up(aria-hidden="true")
				a(href="#", ng-hide="toggleCheveron", ng-click="sortData($index); toggleCheveron = !toggleCheveron")
					span.glyphicon.glyphicon-chevron-down(aria-hidden="true")
		tr(ng-repeat="row in rows | orderBy:predicate:reverse | filter:search", ng-if="startPageRange <= $index && $index < endPageRange")
			td.text-center {{row.column1}}
			//- td(ng-bind-html='row.column2')
			td {{row.column2}}
			td.text-center {{row.column3}}
	nav.text-center
		ul.pagination.pagination-lg
			li(ng-click="showPreviousPage()")
				a(href="#", aria-label="Previous")
					span(aria-hidden="true")&laquo;
			li(ng-repeat="page in numberOfPages track by $index", ng-click="showPage($index)")
				a(href="#") {{$index + 1}}
			li(ng-click="showNextPage()")
				a(href="#" aria-label="Next")
					span(aria-hidden="true")&raquo;